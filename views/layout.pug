doctype html
html(lang="tr")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= tenant.name + ' – Ucuz Otobüs Bileti'
        meta(name="description" content=tenant.name + ' ile 4 adımda online bilet, konforlu yolculuk.')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css")
        link(rel="stylesheet" href="/css/style.css")
        script(type="application/ld+json").
            {
                "@context": "https://schema.org",
                "@type": "Organization",
                "name": "!{tenant.name}",
                "url": "!{tenant.apiBase}",
                "logo": "!{tenant.logo}",
                "telephone": "!{tenant.phone}"
            }
    body
        // 1) TOP BAR
        .top-bar.text-white.small
            .container.d-flex.justify-content-between.align-items-center.py-2
                span Müşteri Hizmetleri
                a.text-white.text-decoration-none(href="tel:" + tenant.phone.replace(/\s/g,''))
                    i.bi.bi-telephone.me-1
                    = tenant.phone

        // 2) NAVBAR
        nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.sticky-top
            .container
                a.navbar-brand(href="/")
                    img(src=tenant.logo height="40" alt=tenant.name loading="lazy")
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Menü")
                    span.navbar-toggler-icon
                #mainNav.collapse.navbar-collapse
                    ul.navbar-nav.mx-auto.mb-2.mb-lg-0
                        li.nav-item: a.nav-link(href="#") Kurumsal
                        li.nav-item: a.nav-link(href="#") Şubelerimiz
                        li.nav-item: a.nav-link(href="#") Online İşlemler
                        li.nav-item: a.nav-link(href="#") İletişim
                    .d-flex.gap-2
                        a.btn.btn-sm.btn-outline-primary(href="#") Üye Ol
                        a.btn.btn-sm.btn-primary(href="#") Oturum Aç

        main
            block content

        // 10) FOOTER
        footer.bg-dark.text-white.py-4
            .container
                .row.align-items-center
                    .col-md-6.mb-3.mb-md-0
                        img.mb-2(src=tenant.logo height="35" alt=tenant.name loading="lazy")
                        .small © 2025 #{tenant.name}. Tüm hakları saklıdır.
                    .col-md-6.text-md-end
                        .d-flex.gap-3.justify-content-md-end
                            a.btn.btn-outline-light.btn-sm(href="https://wa.me/" + tenant.phone.replace(/\s/g,''))
                                i.bi.bi-whatsapp.me-1
                                | WhatsApp
                            a.btn.btn-outline-light.btn-sm(href="tel:" + tenant.phone.replace(/\s/g,''))
                                i.bi.bi-telephone.me-1
                                | Ara
                .mt-3.small.text-center
                    a.text-white-50.me-3(href="#") Gizlilik
                    a.text-white-50.me-3(href="#") Kullanım Koşulları
                    a.text-white-50(href="#") Çerez Politikası

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        script(src="https://cdn.jsdelivr.net/npm/flatpickr")
        script(src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/tr.js")
        script(src="/js/script.js")
        script(src="/js/searchable-select.js")